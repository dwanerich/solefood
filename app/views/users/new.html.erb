<h2>Sign up</h2>

<%if @user.errors.any?%>
<% @user.errors %>

<ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for (@user) do |f|%>
<%= f.label :username%>
<%= f.text_field :username, :placeholder => "username"%> <br>

<%= f.label :password %>
<%= f.password_field :password, :placeholder => "password" %> <br>
<%=f.label :confirmation %>
<%= f.password_field :password_confirmation, :placeholder => "password confirmation" %> <br> <br>

<%= f.submit "Sign Up" %>
<% end %>

