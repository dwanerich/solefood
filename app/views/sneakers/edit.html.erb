<h2>Edit Sneaker</h2>



<% if @sneaker.errors.any? %>
  <ul>
    <% @sneaker.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <%end%>
  </ul>
<%end%>


<%= form_for @sneaker do |f|%>
  <%=render partial: 'form', locals: {f: f}%>
    <%=f.submit "Update Sneaker"%>

  <p>Select from existing Brands: </p>

<%= f.collection_select :brand_id , Brand.all , :id , :name %>

<p>Or Create a new Brand: </p>

    <%= f.fields_for :brand do |b| %>
    <%= b.label 'Name' %>
    <%= b.text_field :name %>
    <% end %>
<%= f.submit %>

<%end%>

<%=button_to "Delete", @sneaker, method: :delete %>



